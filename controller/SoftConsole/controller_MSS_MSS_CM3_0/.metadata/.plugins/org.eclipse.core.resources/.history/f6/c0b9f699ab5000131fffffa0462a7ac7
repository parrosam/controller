#include <stdio.h>
#include "drivers/mss_uart/mss_uart.h"

#define CONTROLLER_ADDR 0x40050000

typedef struct{
	volatile uint32_t buttons;
} mycontroller_t;

#define MYCONTROLLER ((mycontroller_t *) CONTROLLER_ADDR)


int main()
{
	while( 1 )
	{
		uint32_t a = MYCONTROLLER->buttons;
		printf("buttons: %lu\r\n", a);

		volatile int i;
		for(i = 0; i < 100; i++);
	}
}
